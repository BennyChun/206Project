<AnchorPane xmlns="http://javafx.com/javafx"
            style="-fx-background-color: radial-gradient(center 50% 50% , radius 60% , #ffebcd, #008080);"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.view.InstructionsController"
            prefHeight="768.0" prefWidth="1024.0">
    <children>
        <JFXButton buttonType="RAISED" focusTraversable="false" layoutX="31.0" layoutY="14.0" onAction="#handleBack" style="-fx-background-color: #ffffff;">
            <font>
                <Font name="Maiandra GD" size="24.0" />
            </font>
            <graphic>
                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@back-arrow.png" />
                    </image>
                </ImageView>
            </graphic>
        </JFXButton>
    </children>
</AnchorPane>
