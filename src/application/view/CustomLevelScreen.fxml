<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<!--http://blog.e-zest.com/gradients-in-javafx-2/ instructions for gradient backdrop found here. -->

<AnchorPane prefHeight="768.0" prefWidth="1024.0" style="-: radial-gradient(center 50% 50% , radius 60% , #ffebcd, #008080);" stylesheets="@background.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.CustomLevelScreenController">
   <children>
      <JFXButton buttonType="RAISED" focusTraversable="false" layoutX="31.0" layoutY="14.0" onAction="#handleBack">
         <font>
            <Font name="Maiandra GD" size="24.0" />
         </font>
         <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@back-arrow.png" />
               </image>
            </ImageView>
         </graphic>
      </JFXButton>
      <ImageView fx:id="mascot" fitHeight="448.0" fitWidth="406.0" layoutX="22.0" layoutY="174.0" pickOnBounds="true" preserveRatio="true" />
      <HBox layoutX="512.0" layoutY="598.0" prefHeight="100.0" prefWidth="420.0" spacing="94.0">
         <children>
            <JFXButton buttonType="RAISED" focusTraversable="false" onAction="#handlePlay" prefHeight="70.0" prefWidth="80.0" style="-fx-background-color: #ffffff;">
               <graphic>
                  <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@play.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </JFXButton>
            <JFXButton buttonType="RAISED" focusTraversable="false" onAction="#handleAdd" prefHeight="70.0" style="-fx-background-color: #ffffff;">
               <graphic>
                  <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@add-plus-button.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton buttonType="RAISED" focusTraversable="false" onAction="#handleDelete" prefHeight="70.0" style="-fx-background-color: #ffffff;">
               <graphic>
                  <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@trash.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
         </children>
         <padding>
            <Insets top="15.0" />
         </padding>
      </HBox>
      <TableView layoutX="512.0" layoutY="100.0" prefHeight="490.0" prefWidth="420.0">
        <columns>
          <TableColumn prefWidth="75.0" text="Name" />
          <TableColumn prefWidth="75.0" text="Date Created" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
